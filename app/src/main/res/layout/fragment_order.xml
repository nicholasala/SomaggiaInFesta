<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1.4">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <ImageView
                android:id="@+id/decrement_food_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_remove"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Image that allow menu element remove" />

            <TextView
                android:text="Piatto"
                android:textStyle="italic"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/colorSecondaryText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <ImageView
                android:id="@+id/increment_food_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_add"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Image that allow menu element remove" />

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:textSize="32sp"
                android:text="1"
                android:textColor="@color/colorAccent"/>

            <Spinner
                android:id="@+id/order_foods"
                android:layout_width="match_parent"
                android:layout_height="67dp">

            </Spinner>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="0.6">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <TextView
                android:text="Aggiunte"
                android:textStyle="italic"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/colorSecondaryText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">



        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryText">

        <ImageView
            android:id="@+id/order_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_cancel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Image that allow return to actives commands fragment" />

        <ImageView
            android:id="@+id/order_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_send"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:layout_marginEnd="120dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Image that allow sending command to kitchen" />

    </RelativeLayout>

</LinearLayout>