<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <TextView
                android:text="Piatti"
                android:textStyle="italic"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/colorSecondaryText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <ImageView
                android:id="@+id/add_food_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_add"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Image that allow menu element remove" />

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/names_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <TextView
                android:text="Aggiunte"
                android:textStyle="italic"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/colorSecondaryText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <ImageView
                android:id="@+id/add_add_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_add"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Image that allow menu element remove" />

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="6dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/adds_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryText">

        <ImageView
            android:id="@+id/save_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_save"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Image that allow menu element remove" />

        <ImageView
            android:id="@+id/load_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_load"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:layout_marginEnd="120dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Image that allow menu element remove" />

    </RelativeLayout>

</LinearLayout>