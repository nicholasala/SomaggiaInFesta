<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/static_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/static_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:textSize="32sp"
                tools:text="26"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/static_name"
                android:layout_toEndOf="@id/static_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:paddingTop="16dp"
                android:textStyle="bold"
                android:textSize="22sp"
                tools:text="cibo"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/static_added"
                android:layout_toStartOf="@id/static_command_id"
                android:layout_toEndOf="@id/static_number"
                android:layout_below="@id/static_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="italic"
                android:textSize="20sp"
                tools:text="26"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/static_command_id"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/static_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:textStyle="italic"
                android:textSize="20sp"
                tools:text="id"
                android:textColor="@color/colorPrimaryText"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>